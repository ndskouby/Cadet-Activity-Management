<div class="container mt-4">
  <h1>Auditing Activities</h1>
  <div class="row">
    <% @training_activities.each do |activity| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title mb-2"><%= activity.name %></h5>
            <div class="mb-3">
              <span class="badge <%= badge_color_for_status(activity.aasm.human_state) %>">
                <%= activity.aasm.human_state %>
              </span>
            </div>
            <div class="mt-2 w-100">
              <%= link_to "Audit", audit_activity_path(activity), class: "btn btn-primary w-100" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
