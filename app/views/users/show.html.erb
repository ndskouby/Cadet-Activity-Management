<h2>Howdy <%= @current_user.first_name %>!</h2>
<div id="user-details">
  <p>
    <strong>Email:</strong>
    <%= @current_user.email %>
  </p>
  <p>
    <strong>First name:</strong>
    <%= @current_user.first_name %>
  </p>
  <p>
    <strong>Last name:</strong>
    <%= @current_user.last_name %>
  </p>
  <p>
    <strong>Your groups:</strong>
    <ul>
      <%= render partial: 'users/unit', locals: { unit: @current_user.unit} if @current_user.unit %>
    </ul>
  </p>
</div>
<div>
  <ul>
    <li><%= link_to "Training Activities", training_activities_path %></li>
    <li><%= link_to "Audit Activities", audit_activities_path %></li>
  </ul>
</div>
<div>
  <%= link_to "Logout", logout_path %>
</div>
